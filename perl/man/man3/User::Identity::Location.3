.SH "SYNOPSIS"
.IX Header "SYNOPSIS"
.Vb 5
\& use User::Identity;
\& use User::Identity::Location;
\& my $me   = User::Identity\->new(...);
\& my $addr = User::Identity::Location\->new(...);
\& $me\->add(location => $addr);
\&
\& # Simpler
\&
\& use User::Identity;
\& my $me   = User::Identity\->new(...);
