\& my $type    = $content\->type;
\&
\& print "This is a $type message\en";
\&    # \-\-> This is a text/plain; charset="us\-ascii" message
\&
\& print "This is a ", $type\->body, "message\en";
\&    # \-\-> This is a text/plain message
