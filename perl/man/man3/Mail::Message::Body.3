\& my $dir = tempdir; mkdir $dir or die;
\& my $fn  = $message\->body\->dispositionFilename($dir);
\& $message\->decoded\->write(filename => $fn)
\&    or die "Couldn\*(Aqt write to $fn: $!\en";
.Ve
