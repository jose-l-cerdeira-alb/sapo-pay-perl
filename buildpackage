#!/bin/bash
set -e

PACKAGE=sapo-pay-perl
DESCRIPTION="Sapo Pay Perl Runtime and Modules"
BASEDIR=/servers/pay

pre_build_hook() {
    echo
}

copy_content() {
    echo "Copying content to $1"
    mkdir -p $1/$BASEDIR/perl
    mkdir -p $1/$BASEDIR/protobuf

    cp -a ./perl/* $1/$BASEDIR/perl
    cp -a ./protobuf/* $1/$BASEDIR/potobuf
}

. ./tools/packager.sh
