\&  /* totally positive units */
\&  tpu(bnf)=
\&  { local(vu = bnf.tufu, ex = tpuexpo(bnf));
\&
\&    vector(#ex\-1, i, factorback(vu, ex[,i+1]))  \e\e ex[,1] is 1
\&  }
